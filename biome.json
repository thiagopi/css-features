{
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"overrides": [
		{
			"includes": ["**/*.scss"],
			"linter": { "enabled": true },
			"formatter": { "enabled": true },
			"css": { "parser": { "cssModules": true } }
		},
		{
			"includes": ["**/*.html"],
			"linter": { "enabled": true },
			"formatter": { "enabled": true }
		},
		{
			"includes": ["**/*.vue"],
			"linter": { "enabled": true },
			"formatter": { "enabled": true }
		}
	]
}
